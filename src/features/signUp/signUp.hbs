{{#> layout }}
  <section class="auth">
    <div class="auth__wrap">
      {{#> form title="Регистрация"}}
          <div class="auth__group">
            {{> input label="Почта" type="email" name="email"}}
            {{> input label="Логин" name="login"}}
            {{> input label="Имя" name="first_name"}}
            {{> input label="Фамилия" name="second_name"}}
            {{> input label="Телефон" type="tel" name="phone"}}
            {{> input type="password" label="Пароль" name="password"}}
            {{> input type="password" label="Пароль (ещё раз)" name="password"}}
          </div>

          {{> button type="submit" label="Зарегистрироваться" class="auth__btn"}}
          {{> link to="/src/pages/signIn/signIn.html" label="Войти" class="auth__link"}}
      {{/form}}
    </div>
  </section>
{{/layout}}