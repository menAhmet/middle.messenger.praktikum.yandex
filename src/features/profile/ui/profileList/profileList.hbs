<ul class='profile-list'>
	<li class='profile-item profile-list__item'>
		<span>Почта</span>
		<span class='profile-name'>{{> input placeholder="pochta@yandex.ru" name="email" class="profile__input"}}</span>
	</li>
	<li class='profile-item profile-list__item'>
		<span>Логин</span>
		<span class='profile-name'>{{> input placeholder="ivanivanov" name="login" class="profile__input"}}</span>
	</li>
	<li class='profile-item profile-list__item'>
		<span>Имя</span>
		<span class='profile-name'>{{> input placeholder="Иван" name="first_name" class="profile__input"}}</span>
	</li>
	<li class='profile-item profile-list__item'>
		<span>Фамилия</span>
		<span class='profile-name'>{{> input placeholder="Иванов" name="second_name" class="profile__input"}}</span>
	</li>
	<li class='profile-item profile-list__item'>
		<span>Имя в чате</span>
		<span class='profile-name'>{{> input placeholder="Иван" name="display_name" class="profile__input"}}</span>
	</li>
	<li class='profile-item profile-list__item'>
		<span>Телефон</span>
		<span class='profile-name'>{{> input placeholder="+7 (909) 967 30 30" name="phone" type="tel" class="profile__input"}}</span>
	</li>
</ul>
