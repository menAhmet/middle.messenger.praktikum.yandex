{
	"extends": "stylelint-config-standard",
	"rules": {
		"import-notation": "string",
		"color-function-notation": "legacy",
		"string-quotes": "single",
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": ["include", "mixin"]
			}
		],
		"alpha-value-notation": "number"
	},
	"ignoreFiles": ["dist/*"]
}
