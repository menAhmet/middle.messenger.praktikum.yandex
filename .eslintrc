{
	"root": true,
	"env": {
		"es6": true
	},
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint"],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"no-var": "error",
		"no-console": "warn",
		"prefer-const": "error",
		"quotes": ["warn", "single"],
		"jsx-quotes": ["warn", "prefer-double"],
		"indent": ["warn", 2],
		"semi": ["warn", "always"]
	}
}
